<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/city"/>

        <LinearLayout
            android:id="@+id/layout1"
            app:layout_constraintTop_toBottomOf="@id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/willBe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="15dp"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="2"
                    android:shadowDx="2"
                    android:shadowDy="2"/>

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="2"
                    android:shadowDx="2"
                    android:shadowDy="2"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/weather_image"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

                <TextView
                    android:id="@+id/weather_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="2"
                    android:shadowDx="2"
                    android:shadowDy="2"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout1">

        <LinearLayout
            android:id="@+id/layout3"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/windSpeed"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/windSpeed"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:shadowColor="@android:color/black"
                android:shadowRadius="2"
                android:shadowDx="2"
                android:shadowDy="2"/>

            <TextView
                android:id="@+id/windSpeed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:shadowColor="@android:color/black"
                android:shadowRadius="2"
                android:shadowDx="2"
                android:shadowDy="2"/>

            <TextView
                android:id="@+id/windSpeed_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:shadowColor="@android:color/black"
                android:shadowRadius="2"
                android:shadowDx="2"
                android:shadowDy="2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/pressureWeather"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:shadowColor="@android:color/black"
                android:shadowRadius="2"
                android:shadowDx="2"
                android:shadowDy="2"/>

            <TextView
                android:id="@+id/pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:shadowColor="@android:color/black"
                android:shadowRadius="2"
                android:shadowDx="2"
                android:shadowDy="2"/>

            <TextView
                android:layout_marginEnd="15dp"
                android:id="@+id/pressure_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pressure_units"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:shadowColor="@android:color/black"
                android:shadowRadius="2"
                android:shadowDx="2"
                android:shadowDy="2"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layout2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/humidity_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/humidity_units"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"/>
    </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>